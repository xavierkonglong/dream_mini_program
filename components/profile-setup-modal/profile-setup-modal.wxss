/* 个人信息设置弹窗组件样式 */
.profile-setup-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10rpx);
}

.modal-content {
  position: relative;
  width: 650rpx;
  max-height: 85vh;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  animation: modalSlideIn 0.3s ease-out;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translateY(50rpx) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.modal-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.bg-image {
  width: 100%;
  height: 100%;
  opacity: 0.8;
}

.modal-body {
  position: relative;
  z-index: 10;
  padding: 50rpx 40rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  max-height: 85vh;
  overflow-y: auto;
}

/* 标题区域 */
.modal-title {
  text-align: center;
  margin-bottom: 50rpx;
}

.title-text {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #8B5CF6;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.title-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.4;
}

/* 头像区域 */
.avatar-section {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

.avatar-container {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid #8B5CF6;
  box-shadow: 0 8rpx 24rpx rgba(139, 92, 246, 0.3);
  cursor: pointer;
  transition: transform 0.2s ease;
}

.avatar-container:active {
  transform: scale(0.95);
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.avatar-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.avatar-container:active .avatar-overlay {
  opacity: 1;
}

.avatar-overlay.uploading {
  opacity: 1;
  background: rgba(139, 92, 246, 0.8);
}

.avatar-icon {
  font-size: 32rpx;
  color: white;
  margin-bottom: 8rpx;
}

.avatar-text {
  font-size: 20rpx;
  color: white;
  text-align: center;
}

/* 输入框区域 */
.input-section {
  margin-bottom: 30rpx;
}

.cloud-input {
  position: relative;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 20rpx 24rpx;
  border: 2rpx solid rgba(139, 92, 246, 0.2);
  box-shadow: 0 4rpx 12rpx rgba(139, 92, 246, 0.1);
  transition: all 0.3s ease;
}

.cloud-input:focus-within {
  border-color: #8B5CF6;
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.2);
}

.input-label {
  display: block;
  font-size: 24rpx;
  color: #8B5CF6;
  margin-bottom: 12rpx;
  font-weight: 600;
}

.input-field {
  width: 100%;
  font-size: 28rpx;
  color: #333;
  background: transparent;
  border: none;
  outline: none;
}

.input-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
}

.icon-text {
  color: #8B5CF6;
}

/* 按钮区域 */
.button-section {
  margin: 40rpx 0 30rpx;
}

.submit-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #8B5CF6 0%, #A855F7 100%);
  border-radius: 50rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(139, 92, 246, 0.3);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.submit-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.submit-btn:active::before {
  left: 100%;
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.4);
}

.submit-btn.submitting {
  opacity: 0.7;
  transform: none;
}

.submit-btn[disabled] {
  opacity: 0.7;
  transform: none;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
}

/* 提示信息 */
.setup-tips {
  text-align: center;
  padding: 20rpx;
  background: rgba(139, 92, 246, 0.1);
  border-radius: 16rpx;
  border: 1rpx solid rgba(139, 92, 246, 0.2);
}

.tips-text {
  font-size: 24rpx;
  color: #8B5CF6;
  line-height: 1.4;
}




