/* components/custom-tabbar/custom-tabbar.wxss */
.custom-tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #ffffff;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  z-index: 1000;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  transition: all 0.3s ease;
  cursor: pointer;
}

.tab-item:active {
  transform: scale(0.95);
}

.tab-icon {
  margin-bottom: 4rpx;
  color: #7A7E83;
  transition: all 0.3s ease;
}

.tab-item.active .tab-icon {
  color: #8B5CF6;
}

.tab-text {
  font-size: 20rpx;
  color: #7A7E83;
  transition: all 0.3s ease;
}

.tab-item.active .tab-text {
  color: #8B5CF6;
  font-weight: 500;
}
