/* 登录弹窗组件样式 */
.login-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10rpx);
}

.modal-content {
  position: relative;
  width: 600rpx;
  max-height: 80vh;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  animation: modalSlideIn 0.3s ease-out;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translateY(50rpx) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.modal-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.bg-image {
  width: 100%;
  height: 100%;
  opacity: 0.8;
}

.modal-body {
  position: relative;
  z-index: 10;
  padding: 60rpx 40rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
}

/* 标题区域 */
.modal-title {
  text-align: center;
  margin-bottom: 60rpx;
}

.title-text {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #8B5CF6;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.title-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.4;
}

/* 登录按钮区域 */
.login-actions {
  margin-bottom: 40rpx;
}

.login-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #8B5CF6 0%, #A855F7 100%);
  border-radius: 50rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(139, 92, 246, 0.3);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.login-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.login-btn:active::before {
  left: 100%;
}

.login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.4);
}

.login-btn[disabled] {
  opacity: 0.7;
  transform: none;
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
  filter: brightness(0) invert(1);
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
}

.cancel-btn {
  width: 100%;
  height: 80rpx;
  background: transparent;
  border: 2rpx solid #E5E7EB;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.cancel-btn:active {
  background: rgba(229, 231, 235, 0.5);
  transform: scale(0.98);
}

.cancel-text {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

/* 提示信息 */
.login-tips {
  text-align: center;
  padding: 20rpx;
  background: rgba(139, 92, 246, 0.1);
  border-radius: 16rpx;
  border: 1rpx solid rgba(139, 92, 246, 0.2);
}

.tips-text {
  font-size: 24rpx;
  color: #8B5CF6;
  line-height: 1.4;
}


