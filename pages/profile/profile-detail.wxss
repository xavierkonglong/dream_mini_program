/* pages/profile/profile-detail.wxss */
.container {
  min-height: 100vh;
  position: relative;
}

.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

/* 用户信息头部 */
.profile-header {
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
  padding: 60rpx 40rpx 40rpx;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(15rpx);
  border-radius: 0 0 30rpx 30rpx;
  margin-bottom: 40rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.4);
  margin-right: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  font-family: "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "黑体", sans-serif;
  color: rgba(81, 56, 106, 1);
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 24rpx;
  font-family: "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "黑体", sans-serif;
  color: rgba(81, 56, 106, 1);
  margin-bottom: 6rpx;
}

.join-date {
  font-size: 22rpx;
  font-family: "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "黑体", sans-serif;
  color: rgba(81, 56, 106, 1);
  text-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.4);
}

/* 菜单容器 */
.menu-container {
  position: relative;
  z-index: 1;
  padding: 0 40rpx;
}

.menu-section {
  background: rgba(255, 255, 255, 0.12);
  backdrop-filter: blur(15rpx);
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.15);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 28rpx 40rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.08);
  transition: all 0.3s ease;
  position: relative;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #c9c4cf;
  transform: scale(0.98);
}

.menu-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  /* background: rgba(255, 255, 255, 0.15); */
  border-radius: 10rpx;
  color: rgba(86, 75, 121, 1);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  font-family: "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "黑体", sans-serif;
  color: rgba(86, 75, 121, 1);
  font-weight: 500;
  text-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.4);
}

.menu-arrow {
  color: rgba(86, 75, 121, 1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-version {
  font-size: 24rpx;
  font-family: "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "黑体", sans-serif;
  color: rgba(86, 75, 121, 1);
  font-weight: normal;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
}

/* 退出登录按钮 */
.logout-section {
  position: relative;
  z-index: 1;
  padding: 0 40rpx;
  margin-top: 60rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  background: rgba(255, 59, 48, 0.15);
  backdrop-filter: blur(15rpx);
  border: 1rpx solid rgba(255, 59, 48, 0.25);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 6rpx 24rpx rgba(255, 59, 48, 0.15);
}

.logout-btn:active {
  background: rgba(255, 59, 48, 0.25);
  transform: translateY(2rpx) scale(0.98);
}

.logout-text {
  font-size: 28rpx;
  font-family: "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "黑体", sans-serif;
  color: #ff3b30;
  font-weight: 600;
  text-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.3);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .profile-header {
    padding: 40rpx 30rpx 30rpx;
  }

  .avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
    margin-right: 20rpx;
  }

  .username {
    font-size: 32rpx;
  }

  .menu-container {
    padding: 0 30rpx;
  }

  .menu-item {
    padding: 25rpx 30rpx;
  }

  .menu-text {
    font-size: 26rpx;
  }

  .logout-section {
    padding: 0 30rpx;
  }
}