.container {
  padding: 0;
  min-height: calc(100vh - 100rpx - env(safe-area-inset-bottom));
  max-height: 100vh;
  position: relative;
  overflow: auto;
  /* overflow: hidden; */
  background-color: #8B5CF6;
  background-image: url('https://dulele.org.cn/images/assest/person.png');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-attachment: fixed;
}

.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

/* 用户头像区域 */
.profile-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx 40rpx;
  position: relative;
  z-index: 10;
}

/* 已登录状态 */
.user-info-section {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 20rpx 24rpx;
  box-shadow: 0 12rpx 40rpx rgba(139, 92, 246, 0.15);
  backdrop-filter: blur(15rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  width: 100%;
  margin-bottom: 20rpx;
  cursor: pointer;
  transition: transform 0.2s ease;
}

.user-info-section:active {
  transform: scale(0.98);
}

.user-details {
  flex: 1;
  margin-left: 16rpx;
}

.username {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.join-date {
  font-size: 24rpx;
  color: #666;
  display: block;
}

/* 未登录状态 */
.login-section {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 20rpx 24rpx;
  box-shadow: 0 12rpx 40rpx rgba(139, 92, 246, 0.15);
  backdrop-filter: blur(15rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  width: 100%;
  margin-bottom: 20rpx;
}

.login-actions {
  flex: 1;
  margin-left: 16rpx;
}

.login-btn {
  width: 80%;
  height: 80rpx;
  background: linear-gradient(135deg, #8b5cf6 0%, #a855f7 100%);
  border-radius: 40rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(139, 92, 246, 0.3);
  transition: all 0.3s ease;
}

.login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.4);
}

.login-tips {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  display: block;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 3rpx solid #8b5cf6;
  background: linear-gradient(135deg, #8b5cf6 0%, #a855f7 100%);
  transition: transform 0.2s ease;
}

.avatar:active {
  transform: scale(0.95);
}

.profile-btn {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 30rpx;
  padding: 16rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.profile-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.8);
}

.btn-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 标签导航 */
.tab-navigation {
  display: flex;
  justify-content: space-around;
  padding: 0 40rpx 20rpx;
  position: relative;
  z-index: 10;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  position: relative;
  transition: all 0.3s ease;
}

.tab-item.active {
  position: relative;
}

.tab-item.active::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: #8b5cf6;
  border-radius: 3rpx;
}

.tab-text {
  font-size: 28rpx;
  color: #000000;
  font-weight: bold;
  transition: all 0.3s ease;
}

.tab-item.active .tab-text {
  color: #000000;
  font-weight: bold;
}

/* 内容区域 */
.content-area {
  padding: 0 40rpx 160rpx;
  position: relative;
  z-index: 10;
}

.tab-content {
  min-height: 400rpx;
}

/* 时间轴容器 */
.timeline-container {
  padding: 20rpx 0;
  position: relative;
}

/* 时间轴项目 */
.timeline-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 40rpx;
  position: relative;
}

/* 时间节点 */
.timeline-node {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 20rpx;
  position: relative;
}

.node-circle {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #8b5cf6;
  border: 4rpx solid rgba(255, 255, 255, 0.9);
  box-shadow: 0 2rpx 8rpx rgba(139, 92, 246, 0.3);
  z-index: 2;
  position: relative;
}

.node-line {
  width: 2rpx;
  height: 60rpx;
  background: linear-gradient(to bottom, #8b5cf6, rgba(139, 92, 246, 0.3));
  margin-top: 10rpx;
}

/* 时间标记 */
.timeline-time {
  margin-bottom: 16rpx;
  text-align: left;
}

.time-text {
  font-size: 24rpx;
  color: #8b5cf6;
  font-weight: 600;
  background: rgba(255, 255, 255, 0.9);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  display: inline-block;
}

/* 内容区域 */
.timeline-content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
}

/* 梦境卡片 */
.dream-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.1);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(139, 92, 246, 0.2);
  transition: all 0.3s ease;
}

.dream-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 12rpx rgba(139, 92, 246, 0.2);
}

.dream-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.dream-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  flex: 1;
}

.dream-image {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
}

/* 视频卡片 */
.video-card {
  position: relative;
  width: 100%;
  height: 400rpx;
  border-radius: 24rpx 24rpx 0 0;
  overflow: hidden;
  background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
}

.dream-video {
  width: 100%;
  height: 100%;
  border-radius: 24rpx 24rpx 0 0;
}

.video-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 24rpx 24rpx 0 0;
}

.play-icon {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #8b5cf6;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

/* 卷轴网格布局 */
.scroll-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  padding: 20rpx 0;
}

/* 卷轴卡片 */
.scroll-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx 20rpx 8rpx 8rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(139, 92, 246, 0.1);
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(139, 92, 246, 0.2);
  position: relative;
  transition: all 0.3s ease;
  min-height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* 卷轴底部卷曲效果 */
.scroll-card::after {
  content: "";
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
  height: 16rpx;
  background: linear-gradient(135deg, #8b5cf6 0%, #a855f7 100%);
  border-radius: 0 0 8rpx 8rpx;
  opacity: 0.3;
}

.scroll-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.2);
}

.card-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.dream-title {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.dream-date {
  font-size: 22rpx;
  color: #8b5cf6;
  opacity: 0.8;
}

/* 登录提示区域 */
.login-prompt {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 500rpx;
  padding: 60rpx 40rpx;
}

.prompt-content {
  text-align: center;
  background: linear-gradient(135deg,
      rgba(255, 255, 255, 0.95) 0%,
      rgba(255, 255, 255, 0.9) 100%);
  border-radius: 32rpx;
  padding: 80rpx 50rpx;
  box-shadow: 0 20rpx 60rpx rgba(139, 92, 246, 0.2);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  max-width: 520rpx;
  width: 100%;
  position: relative;
  overflow: hidden;
}

/* 添加装饰性背景 */
.prompt-content::before {
  content: "";
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle,
      rgba(139, 92, 246, 0.05) 0%,
      transparent 70%);
  z-index: -1;
}

.prompt-icon {
  font-size: 100rpx;
  display: block;
  margin-bottom: 32rpx;
  opacity: 0.9;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.1));
}

.prompt-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #2d3748;
  margin-bottom: 20rpx;
  display: block;
  letter-spacing: 0.5rpx;
}

.prompt-desc {
  font-size: 28rpx;
  color: #718096;
  line-height: 1.6;
  margin-bottom: 50rpx;
  display: block;
  max-width: 400rpx;
  margin-left: auto;
  margin-right: auto;
}

.prompt-login-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #8b5cf6 0%, #a855f7 50%, #c084fc 100%);
  border-radius: 44rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 32rpx rgba(139, 92, 246, 0.4);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.prompt-login-btn::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg,
      transparent,
      rgba(255, 255, 255, 0.3),
      transparent);
  transition: left 0.6s ease;
}

.prompt-login-btn:active {
  transform: scale(0.96);
  box-shadow: 0 6rpx 20rpx rgba(139, 92, 246, 0.5);
}

.prompt-login-btn:active::before {
  left: 100%;
}

.prompt-login-btn .btn-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
  letter-spacing: 1rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* 梦境列表样式 - 与社区页面保持一致 */
.dream-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  position: relative;
  z-index: 10;
  padding: 20rpx;
}

/* 梦境帖子项 */
.dream-item {
  background: rgba(211, 197, 197, 0.45);
  border-radius: 24rpx;
  padding: 0;
  box-shadow: 0 12rpx 40rpx rgba(139, 92, 246, 0.15);
  /* backdrop-filter: blur(15rpx); */
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.dream-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

/* 梦境图片 */
.dream-image {
  width: 100%;
  height: 400rpx;
  border-radius: 24rpx 24rpx 0 0;
  background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
}

/* 梦境内容 */
.dream-content {
  padding: 32rpx;
  padding-bottom: 20rpx;
}

.dream-text {
  display: block;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 20rpx;
  word-break: break-all;
}

.keywords {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.keyword-tag {
  background: #f3f0ff;
  color: #6d28d9;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  min-height: 60rpx;
  line-height: 1;
  border: none;
  box-shadow: none;
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

.keyword-tag:active {
  transform: translateY(1rpx);
  background: #e9e5ff;
  color: #5b21b6;
}

/* 操作按钮和统计信息 */
.actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 32rpx 32rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
}

.stats {
  flex: 1;
}

.create-time {
  font-size: 24rpx;
  color: #999;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  transition: all 0.3s ease;
  background: rgba(255, 255, 255, 0.8);
}

.action-btn:active {
  background: rgba(139, 92, 246, 0.1);
  transform: scale(0.95);
}

.action-icon {
  font-size: 40rpx !important;
  margin-right: 8rpx;
  color: #969799;
  transition: all 0.3s ease;
}

.action-text {
  font-size: 24rpx;
  color: #969799;
  font-weight: 500;
  transition: all 0.3s ease;
}

.like-btn.active {
  background: rgba(239, 68, 68, 0.1);
}

.action-icon.liked {
  color: #ff4444 !important;
}

.action-icon.favorited {
  color: #ffd21e !important;
}

.liked .action-text {
  color: #ff4444;
}

.favorited .action-text {
  color: #ffd21e;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
  padding: 60rpx 40rpx;
}

.empty-content {
  text-align: center;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 12rpx 40rpx rgba(139, 92, 246, 0.15);
  backdrop-filter: blur(15rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  max-width: 500rpx;
  width: 100%;
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 24rpx;
  opacity: 0.8;
}

.empty-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.empty-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 40rpx;
  display: block;
}

.empty-action-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #8b5cf6 0%, #a855f7 100%);
  border-radius: 40rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(139, 92, 246, 0.3);
  transition: all 0.3s ease;
}

.empty-action-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.4);
}

.empty-action-btn .btn-text {
  font-size: 28rpx;
  color: #fff;
  font-weight: 500;
}
