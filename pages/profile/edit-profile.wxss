/* pages/profile/edit-profile.wxss */
.container {
  min-height: 100vh;
  position: relative;
  overflow: hidden;
}

.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

/* 顶部导航 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 60rpx 40rpx 40rpx;
  position: relative;
  z-index: 10;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.back-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

.back-icon {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
}

.header-title {
  font-size: 36rpx;
  color: white;
  font-weight: 600;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.placeholder {
  width: 60rpx;
}

/* 主内容区域 */
.main-content {
  position: relative;
  z-index: 10;
  padding: 0 40rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: calc(100vh - 200rpx);
  justify-content: center;
}

/* 头像区域 */
.avatar-section {
  display: flex;
  justify-content: center;
  margin-bottom: 60rpx;
}

.avatar-container {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 12rpx 40rpx rgba(139, 92, 246, 0.3);
  transition: all 0.3s ease;
  cursor: pointer;
}

.avatar-container:active {
  transform: scale(0.95);
}

.avatar-image {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
}

.avatar-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: all 0.3s ease;
}

.avatar-container:active .avatar-overlay {
  opacity: 1;
}

.avatar-overlay.uploading {
  opacity: 1;
  background: rgba(139, 92, 246, 0.8);
}

.avatar-icon {
  font-size: 40rpx;
  color: white;
  margin-bottom: 8rpx;
}

.avatar-text {
  font-size: 24rpx;
  color: white;
  font-weight: 500;
}

/* 输入区域 */
.input-section {
  width: 100%;
  max-width: 600rpx;
  margin-bottom: 60rpx;
}

/* 云朵输入框 */
.cloud-input {
  position: relative;
  background: rgba(255, 255, 255, 0.8);
  border: 3rpx solid #8B5CF6;
  border-radius: 40rpx 40rpx 40rpx 40rpx;
  padding: 32rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(139, 92, 246, 0.2);
  backdrop-filter: blur(15rpx);
  transition: all 0.3s ease;
}

.cloud-input:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 20rpx rgba(139, 92, 246, 0.3);
}

.input-label {
  position: absolute;
  top: 20rpx;
  left: 30rpx;
  font-size: 24rpx;
  color: #8B5CF6;
  font-weight: 600;
  background: rgba(255, 255, 255, 0.9);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.input-field {
  width: 100%;
  height: 60rpx;
  background: transparent;
  border: none;
  outline: none;
  color: #333;
  font-size: 28rpx;
  padding-top: 20rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.input-field::placeholder {
  color: #999;
}

.input-icon {
  position: absolute;
  top: 50%;
  right: 30rpx;
  transform: translateY(-50%);
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: rgba(139, 92, 246, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-text {
  color: #8B5CF6;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 操作区域 */
.action-section {
  width: 100%;
  max-width: 600rpx;
  margin-top: 40rpx;
}

/* 更新按钮 */
.update-button {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #8B5CF6 0%, #A855F7 100%);
  border: none;
  border-radius: 40rpx;
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(139, 92, 246, 0.4);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

.update-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.5);
}

.update-button.updating {
  opacity: 0.8;
  transform: none;
  background: linear-gradient(135deg, #9ca3af 0%, #d1d5db 100%);
  box-shadow: 0 4rpx 16rpx rgba(156, 163, 175, 0.3);
}

.update-button[disabled] {
  opacity: 0.8;
  background: linear-gradient(135deg, #9ca3af 0%, #d1d5db 100%);
  box-shadow: 0 4rpx 16rpx rgba(156, 163, 175, 0.3);
}

