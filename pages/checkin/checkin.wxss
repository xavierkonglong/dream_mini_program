/* 积分任务签到页面样式 */
page {
  background: linear-gradient(180deg, #e8f4f8 0%, #f0f9fb 100%);
  min-height: 100vh;
}

.checkin-container {
  min-height: 100vh;
  height: 100vh;
  background-image: url(https://dulele.org.cn/images/assest/index_v2_bg_16.jpg);
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  overflow: auto;
}

.rules-hint {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx 30rpx;
}

.rules-text {
  font-size: 24rpx;
  color: white;
}

.question-icon {
  font-size: 24rpx;
  color: white;
}

/* 签到区域 */
.checkin-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0rpx 30rpx 40rpx;
  position: relative;
}

.checkin-circle {
  width: 280rpx;
  height: 280rpx;
  position: relative;
  margin-bottom: 40rpx;
}

.circle-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: linear-gradient(135deg, #f1f1f1 0%, #ffffff 100%);
  box-shadow: 0 4px 12px rgb(165 165 165 / 15%), 0 0 0 4px rgb(0 0 0 / 20%),
    inset 0 1px 4px rgb(142 142 142 / 50%);
}

.circle-content {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 1;
}

.checkin-label {
  font-size: 24rpx;
  color: #844AF1;
  margin-bottom: 8rpx;
}

.checkin-days {
  color: #8c69cc;
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.days-number {
  font-size: 96rpx;
  font-weight: bold;
  line-height: 1;
}

.days-unit {
  font-size: 32rpx;
}

.checkin-btn {
  width: 280rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #8b5cf6 0%, #a78bfa 100%);
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(139, 92, 246, 0.25);
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkin-btn.checked-in {
  background: #cccccc;
  box-shadow: none;
}

.checkin-btn::after {
  border: none;
}

.tomorrow-reward {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #844AF1;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.12);
}

.reward-icon {
  font-size: 24rpx;
}

.reward-text {
  font-size: 24rpx;
}

/* 积分摘要 */
.points-summary {
  display: flex;
  justify-content: space-between;
  margin: 0 30rpx 40rpx;
  padding: 30rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.points-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  flex: 1;
}

.points-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}

.points-icon.today {
  background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
}

.points-icon.total {
  background: linear-gradient(135deg, #ffd700 0%, #ffa500 100%);
}

.icon-text {
  color: #ffffff;
  font-weight: bold;
}

.points-label {
  font-size: 24rpx;
  color: rgba(159, 145, 207, 1);
}

.points-value {
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(159, 145, 207, 1);
}

/* 任务列表 */
.tasks-section {
  padding: 0 30rpx;
}

.tasks-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 24rpx;
}

.task-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding-bottom:20rpx;
}

.task-card {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(139, 92, 246, 0.12);
}

.task-icon-wrapper {
  margin-right: 24rpx;
}

.task-icon {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(248, 249, 250, 1);
  border-radius: 16rpx;
}

.task-icon.blood-glucose {
  background: linear-gradient(135deg, #ede9fe 0%, #ddd6fe 100%);
}

.task-icon.zhongan {
  background: linear-gradient(135deg, #ede9fe 0%, #e0e7ff 100%);
}

.task-icon.publish {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
}

.task-icon.share {
  background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
}

.task-icon.like {
  background: linear-gradient(135deg, #fce7f3 0%, #fbcfe8 100%);
}

.task-icon-emoji {
  font-size: 50rpx;
}

.task-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.task-title {
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(131, 100, 238, 1);
}

.task-desc {
  font-size: 24rpx;
  color: rgba(159, 145, 207, 1)
}

.task-points {
  font-size: 24rpx;
  color: #ff6b6b;
  margin-top: 4rpx;
}

.task-btn {
  min-width: 140rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #8b5cf6 0%, #a78bfa 100%);
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #ffffff;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 20rpx;
  margin-left: 20rpx;
}

.task-btn.completed {
  background: #cccccc;
  min-width: 120rpx;
}

.task-btn::after {
  border: none;
}