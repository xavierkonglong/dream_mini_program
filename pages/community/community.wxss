/* pages/community/community.wxss */
/* 自定义导航栏 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: #8B5CF6;
  z-index: 100;
  /* padding-bottom: 10px; */
}

.nav-title {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  line-height: 44px;
}

.container {
  padding: 0;
  min-height: calc(100vh - 100rpx - env(safe-area-inset-bottom));
  padding-bottom: 160rpx; /* 为底部导航栏留出空间，不限制高度 */
  position: relative;
  background-color: #8B5CF6;
}

.container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 100vh;
  background-image: url('https://dulele.org.cn/images/assest/community.png');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  z-index: 10;
}

/* 页面标题 */
.header {
  text-align: center;
  /* margin-bottom: 40rpx; */
  padding: 40rpx 20rpx;
  position: relative;
  z-index: 10;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 梦境列表 */
.dream-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  position: relative;
  z-index: 10;
  padding: 0 40rpx;
}

/* 梦境帖子项 */
.dream-item {
  background: rgba(211, 197, 197, 0.45);
  border-radius: 24rpx;
  padding: 0;
  box-shadow: 0 12rpx 40rpx rgba(139, 92, 246, 0.15);
  /* backdrop-filter: blur(15rpx); */
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.dream-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

/* 梦境图片 */
.dream-image {
  width: 100%;
  height: 400rpx;
  border-radius: 24rpx 24rpx 0 0;
  background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
}

/* 视频卡片 */
.video-card {
  position: relative;
  width: 100%;
  height: 400rpx;
  border-radius: 24rpx 24rpx 0 0;
  overflow: hidden;
  background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
}

.dream-video {
  width: 100%;
  height: 100%;
  border-radius: 24rpx 24rpx 0 0;
}

.video-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 24rpx 24rpx 0 0;
}

.play-icon {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #8B5CF6;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

/* 梦境内容 */
.dream-content {
  padding: 32rpx;
  padding-bottom: 20rpx;
}

.dream-text {
  display: block;
  font-size: 28rpx;
  line-height: 1.6;
  color: #000;
  word-break: break-all;
}

/* 关键词区域 */
.keywords-section {
  padding: 0 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.keywords {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.keyword-tag {
  background: #f3f0ff;
  color: #6d28d9;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  min-height: 60rpx;
  line-height: 1;
  border: none;
  box-shadow: none;
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

.keyword-tag:active {
  transform: translateY(1rpx);
  background: #e9e5ff;
  color: #5b21b6;
}

/* 操作按钮 */
.actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 32rpx;
  /* background: rgba(248, 250, 252, 0.8); */
}

.stats {
  flex: 1;
}

.create-time {
  font-size: 24rpx;
  color: #000;
}

.action-buttons {
  display: flex;
  gap: 30rpx;
  justify-content: flex-end;
}

.action-btn {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  transition: all 0.3s ease;
  background: rgba(255, 255, 255, 0.8);
  /* border: 1rpx solid rgba(139, 92, 246, 0.2); */
}

.action-btn:active {
  background: rgba(139, 92, 246, 0.1);
  transform: scale(0.95);
}

.action-icon {
  font-size: 40rpx !important;
  margin-right: 8rpx;
  color: #969799;
  transition: all 0.3s ease;
}

.action-icon.liked {
  color: #ff4444 !important;
}

.action-icon.favorited {
  color: #ffd21e !important;
}

.action-text {
  font-size: 24rpx;
  color: #969799;
  font-weight: 500;
  transition: all 0.3s ease;
}

.liked .action-text {
  color: #ff4444;
}

.favorited .action-text {
  color: #ffd21e;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: rgba(255, 255, 255, 0.9);
  font-size: 28rpx;
  position: relative;
  z-index: 10;
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 加载更多状态 */
.load-more {
  text-align: center;
  padding: 30rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
  position: relative;
  z-index: 10;
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 没有更多数据 */
.no-more {
  text-align: center;
  padding: 30rpx;
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
  position: relative;
  z-index: 10;
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  color: rgba(255, 255, 255, 0.9);
  position: relative;
  z-index: 10;
}

.empty-icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.empty-desc {
  display: block;
  font-size: 28rpx;
  opacity: 0.8;
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.2);
}
