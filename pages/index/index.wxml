  <!-- 主内容区域 -->
  <view class="main-content">

    <view class="member-language">
      <view class="member-language-fraction">
        <view class="member-language-fraction-left">
          <view class="member-language-avatar">
            <view class="member-language-v2-avatar">
              <view class="member-language-v3-avatar">
                <image class="avatar-v3" src="https://dulele.org.cn/images/assest/index_v2_ip_t.png" mode="" />
                <image class="crown-icon" src="data:image/svg+xml;charset=utf-8;base64," mode="aspectFit"></image>
              </view>
            </view>
          </view>
        </view>

        <view class="avatar-number">
          <text class="avatar-number-text">{{totalPoints}}</text>
          <image class="diamond-icon" src="data:image/svg+xml;charset=utf-8;base64," mode="aspectFit"></image>
        </view>
      </view>

      <view class="top-actions-left" wx:if="{{isLoggedIn}}">
        <view class="points-display" bindtap="goToCheckin">
          <van-icon name="medal-o" size="48rpx" color="#ffae00" />
          <text class="points-text">{{i18n.index.checkinToGetPoints}}</text>
        </view>
      </view>

      <view class="btn-member-language" bindtap="onLanguageToggle">
        <text class="btn-member-language-text">{{language === 'zh' ? 'En' : '中文'}}</text>
      </view>
    </view>

    <!-- 提示区域 -->
    <view class="prompt-message">
      <view class="prompt-message-hint-title">{{i18n.index.greetingTitle}}</view>
      <view class="prompt-message-hint-subtitle">{{i18n.index.greetingSubtitle}}</view>
    </view>

