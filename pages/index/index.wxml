    <view class="generation-type-section-v2">
      <view class="generation-type-section-v2-top">
        <view class="raw-photos {{generationType === 'image' ? 'active' : ''}}" bindtap="onSelectImage">
          <image class="raw-photos-img" src="data:image/svg+xml;charset=utf-8;base64," mode="" />
          <text>{{i18n.index.generateImage}}</text>

          <view class="points-cost">
            <text class="points-cost-text" wx:if="{{isVip && membershipInfo && membershipInfo.benefits && membershipInfo.benefits.text_to_image > 0}}">{{membershipInfo.benefits.text_to_image}}/{{membershipInfo.benefit_defaults.text_to_image}}{{i18n.index.times}}</text>
            <text class="points-cost-text" wx:else>-{{pointsCost.image}}{{i18n.index.points}}</text>
          </view>
        </view>
        <view class="raw-video {{generationType === 'video' ? 'active' : ''}}" bindtap="onSelectVideo" wx:if="{{!isNewVersion}}">
          <image class="raw-photos-img" src="data:image/svg+xml;charset=utf-8;base64," mode="" />
          <text>{{i18n.index.generateVideo}}</text>

          <view class="points-cost">
            <text class="points-cost-text" wx:if="{{isVip && membershipInfo && membershipInfo.benefits && membershipInfo.benefits.text_to_video > 0}}">{{membershipInfo.benefits.text_to_video}}/{{membershipInfo.benefit_defaults.text_to_video}}{{i18n.index.times}}</text>
            <text class="points-cost-text" wx:else>-{{pointsCost.video}}{{i18n.index.points}}</text>
          </view>
        </view>
      </view>
      <view class="generation-type-section-v2-bom" bindtap="onParseDream">
        <text class="parse-button">{{i18n.index.dreamAnalysis}}</text>
        <text class="vip-badge" wx:if="{{isVip}}">VIP</text>
        <text class="discount-badge" wx:if="{{isVip}}">{{i18n.index.discount}}</text>
      </view>
    </view>

