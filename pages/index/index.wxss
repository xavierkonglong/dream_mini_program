/* 操作区域 */
.action-section {
  width: 100%;
  max-width: 640rpx;
  margin-bottom: 60rpx;
}

.analysis-button {
  width: 100%;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.9);
  border: 2rpx solid #8b5cf6;
  border-radius: 40rpx;
  color: #8b5cf6;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(139, 92, 246, 0.2);
  transition: background-color 0.2s ease, border-color 0.2s ease,
    box-shadow 0.2s ease, color 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  backdrop-filter: blur(10rpx);
}

/* 微信小程序不支持::before伪元素，移除动画效果 */

.analysis-button:active {
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.3);
  background: rgba(255, 255, 255, 0.8);
}

.analysis-button.analyzing {
  opacity: 0.8;
  background: rgba(200, 200, 200, 0.9);
  border-color: #9ca3af;
  color: #9ca3af;
  box-shadow: 0 4rpx 16rpx rgba(156, 163, 175, 0.2);
}

.analysis-button[disabled] {
  opacity: 0.8;
  background: rgba(200, 200, 200, 0.9);
  border-color: #9ca3af;
  color: #9ca3af;
}

/* 进度条 */
.progress-section {
  width: 100%;
  max-width: 640rpx;
  opacity: 0;
  transform: translateY(10rpx);
  transition: opacity 0.2s ease, transform 0.2s ease;
  height: 0;
  overflow: hidden;
  margin-top: 0;
  pointer-events: none;
  visibility: hidden;
  transform: translateZ(0);
  backface-visibility: hidden;
}

.progress-section.show {
  opacity: 1;
  transform: translateY(0) translateZ(0);
  height: auto;
  margin-top: 20rpx;
  pointer-events: auto;
  visibility: visible;
}

.progress-bar {
  height: 8rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 4rpx;
  overflow: hidden;
  position: relative;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #8b5cf6, #a855f7, #c084fc);
  border-radius: 4rpx;
  position: relative;
  transition: width 0.3s ease;
}

/* 进度文本 */
.progress-text {
  text-align: center;
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #8b5cf6;
  font-weight: 700;
  opacity: 1;
  text-shadow: 0 1rpx 2rpx rgba(139, 92, 246, 0.3);
  transition: all 0.3s ease;
}

