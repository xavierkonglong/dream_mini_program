/* 首页样式 - 水彩梦境风格 */
@import "../../styles/variables.wxss";
@import "../../styles/mixins.wxss";

.container {
  min-height: calc(100vh - 100rpx - env(safe-area-inset-bottom));
  max-height: 100vh;
  padding-bottom: 120rpx;
  /* 为底部导航栏留出空间，不限制高度 */
  position: relative;
  overflow: hidden;
  transform: translateZ(0);
  backface-visibility: hidden;
  perspective: 1000px;
}

.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

/* 背景装饰已移除，使用背景图片 */

/* 主内容区域 */
.main-content {
  position: relative;
  z-index: 10;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: calc(100vh - 100rpx - env(safe-area-inset-bottom));
  /* padding: 120rpx 40rpx 120rpx; */
  transform: translateZ(0);
  backface-visibility: hidden;
}

/* 提示区域 */
.hint-section {
  width: 100%;
  max-width: 640rpx;
  margin-bottom: 40rpx;
  text-align: center;
}

.hint-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.hint-subtitle {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 32rpx;
  line-height: 1.4;
}

/* 输入区域 */
.input-section {
  width: 100%;
  max-width: 640rpx;
  margin-bottom: 60rpx;
}

.input-field {
  border-radius: 20rpx;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.9);
  border: 2rpx solid rgba(139, 92, 246, 0.2);
  box-shadow: 0 8rpx 32rpx rgba(139, 92, 246, 0.1);
  transition: all 0.3s ease;
  position: relative;
  backdrop-filter: blur(10rpx);
}

.input-field.focused {
  border-color: #8b5cf6;
  box-shadow: 0 6rpx 24rpx rgba(139, 92, 246, 0.25);
  transform: translateY(-2rpx);
}

.dream-input {
  width: 100%;
  height: 180rpx;
  background: transparent;
  border: none;
  outline: none;
  resize: none;
  color: #333;
  font-size: 28rpx;
  line-height: 1.6;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "PingFang SC",
    "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
}

.dream-input::placeholder {
  color: #999;
}

.input-actions {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.char-count {
  font-size: 20rpx;
  color: #999;
  background: rgba(255, 255, 255, 0.8);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  backdrop-filter: blur(5rpx);
}

.clear-btn {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.clear-btn:active {
  background: rgba(0, 0, 0, 0.2);
  transform: scale(0.95);
}

.clear-icon {
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
}

/* 生成类型选择 */
.generation-type-section {
  width: 100%;
  max-width: 640rpx;
  margin-bottom: 40rpx;
}

.generation-type-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.generation-type-group {
  display: flex;
  gap: 10rpx;
  justify-content: center;
}

.generation-type-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 24rpx;
  background: rgba(255, 255, 255, 0.8);
  border: 2rpx solid rgba(139, 92, 246, 0.2);
  border-radius: 16rpx;
  transition: all 0.3s ease;
  backdrop-filter: blur(10rpx);
  white-space: nowrap;
}

.generation-type-item.active {
  background: rgba(139, 92, 246, 0.1);
  border-color: #8b5cf6;
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.15);
}

.generation-type-item radio {
  /* margin-right: 12rpx; */
}

.generation-type-item text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 操作区域 */
.action-section {
  width: 100%;
  max-width: 640rpx;
  margin-bottom: 60rpx;
}

.analysis-button {
  width: 100%;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.9);
  border: 2rpx solid #8b5cf6;
  border-radius: 40rpx;
  color: #8b5cf6;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(139, 92, 246, 0.2);
  transition: background-color 0.2s ease, border-color 0.2s ease,
    box-shadow 0.2s ease, color 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  backdrop-filter: blur(10rpx);
}

/* 微信小程序不支持::before伪元素，移除动画效果 */

.analysis-button:active {
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.3);
  background: rgba(255, 255, 255, 0.8);
}

.analysis-button.analyzing {
  opacity: 0.8;
  background: rgba(200, 200, 200, 0.9);
  border-color: #9ca3af;
  color: #9ca3af;
  box-shadow: 0 4rpx 16rpx rgba(156, 163, 175, 0.2);
}

.analysis-button[disabled] {
  opacity: 0.8;
  background: rgba(200, 200, 200, 0.9);
  border-color: #9ca3af;
  color: #9ca3af;
}

/* 进度条 */
.progress-section {
  width: 100%;
  max-width: 640rpx;
  opacity: 0;
  transform: translateY(10rpx);
  transition: opacity 0.2s ease, transform 0.2s ease;
  height: 0;
  overflow: hidden;
  margin-top: 0;
  pointer-events: none;
  visibility: hidden;
  transform: translateZ(0);
  backface-visibility: hidden;
}

.progress-section.show {
  opacity: 1;
  transform: translateY(0) translateZ(0);
  height: auto;
  margin-top: 20rpx;
  pointer-events: auto;
  visibility: visible;
}

.progress-bar {
  height: 8rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 4rpx;
  overflow: hidden;
  position: relative;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #8b5cf6, #a855f7, #c084fc);
  border-radius: 4rpx;
  position: relative;
  transition: width 0.3s ease;
}

/* 进度文本 */
.progress-text {
  text-align: center;
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #8b5cf6;
  font-weight: 700;
  opacity: 1;
  text-shadow: 0 1rpx 2rpx rgba(139, 92, 246, 0.3);
  transition: all 0.3s ease;
}

/* 使用提示区域 */
.tips-section {
  width: 100%;
  max-width: 640rpx;
  /* margin-top: 40rpx; */
  text-align: center;
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.tips-content {
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  padding: 24rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(139, 92, 246, 0.1);
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.08);
}

.tip-item {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 8rpx;
  text-align: left;
}

.tip-item:last-child {
  margin-bottom: 0;
  color: #999;
  font-style: italic;
}

.tips-disclaimer {
  font-size: 22rpx;
  color: rgb(61, 59, 59);
  margin-top: 16rpx;
  font-style: italic;
  opacity: 0.8;
}

.language-en .action-section {
  margin-bottom: 8rpx;
}
.language-en .input-section {
  margin-bottom: 8rpx;
}
.language-en .hint-section {
  margin-bottom: 8rpx;
}

/* 语言切换按钮 */
.language-toggle {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  z-index: 100;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.language-toggle:active {
  transform: scale(0.95);
  background: rgba(139, 92, 246, 0.1);
}

.language-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #8b5cf6;
  text-align: center;
}
