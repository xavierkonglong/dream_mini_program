  font-weight: 600;
  color: #8b5cf6;
  margin-right: 10rpx;
}

.input-field {
  height: 100%;
  border-radius: 20rpx;
  padding: 55rpx;
  border: 2rpx solid rgba(139, 92, 246, 0.2);
  box-shadow: 0 8rpx 32rpx rgba(139, 92, 246, 0.1);
  transition: all 0.3s ease;
  position: relative;
  backdrop-filter: blur(10rpx);
  box-sizing: border-box;
  z-index: 1; /* 输入框层级 */
}

.input-field.focused {
  border-color: #8b5cf6;
  box-shadow: 0 6rpx 24rpx rgba(139, 92, 246, 0.25);
  transform: translateY(-2rpx);
}

.dream-input {
  width: 100%;
